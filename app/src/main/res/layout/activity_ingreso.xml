<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <TextView
        android:id="@+id/Bienvenido_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal|top"
        android:text="@string/bienvenido"
        android:textAppearance="@style/Bienvenido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/caja_miperfil"
        android:layout_width="291dp"
        android:layout_height="44dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/botones_ingreso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bienvenido_" />

    <View
        android:id="@+id/logo_perfil"
        android:layout_width="22dp"
        android:layout_height="25dp"
        android:background="@drawable/mi_perfil"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/caja_miperfil"
        app:layout_constraintStart_toStartOf="@+id/caja_miperfil"
        app:layout_constraintTop_toTopOf="@+id/caja_miperfil"/>

    <TextView
        android:id="@+id/mi_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:text="@string/mi_perfil"
        android:textAppearance="@style/botones_ingreso"
        app:layout_constraintBottom_toBottomOf="@+id/caja_miperfil"
        app:layout_constraintStart_toStartOf="@+id/caja_miperfil"
        app:layout_constraintTop_toTopOf="@+id/caja_miperfil" />

    <View
        android:id="@+id/caja_crearcoleccion"
        android:layout_width="291dp"
        android:layout_height="44dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/botones_ingreso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bienvenido_" />

    <View
        android:id="@+id/logo_crearcoleccion"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/crear_coleccion"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/caja_crearcoleccion"
        app:layout_constraintStart_toStartOf="@+id/caja_crearcoleccion"
        app:layout_constraintTop_toTopOf="@+id/caja_crearcoleccion"/>

    <TextView
        android:id="@+id/crear_coleccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:text="@string/crear_coleccion"
        android:textAppearance="@style/botones_ingreso"
        app:layout_constraintBottom_toBottomOf="@+id/caja_crearcoleccion"
        app:layout_constraintStart_toStartOf="@+id/caja_crearcoleccion"
        app:layout_constraintTop_toTopOf="@+id/caja_crearcoleccion" />

    <View
        android:id="@+id/caja_mis_colecciones"
        android:layout_width="291dp"
        android:layout_height="44dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/botones_ingreso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bienvenido_" />

    <ImageView
        android:id="@+id/mi_imagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mis_colecciones"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/caja_mis_colecciones"
        app:layout_constraintStart_toStartOf="@+id/caja_mis_colecciones"
        app:layout_constraintTop_toTopOf="@+id/caja_mis_colecciones"/>

    <TextView
        android:id="@+id/mis_colecciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:text="@string/mis_colecciones"
        android:textAppearance="@style/botones_ingreso"
        app:layout_constraintBottom_toBottomOf="@+id/caja_mis_colecciones"
        app:layout_constraintStart_toStartOf="@+id/caja_mis_colecciones"
        app:layout_constraintTop_toTopOf="@+id/caja_mis_colecciones" />

    <View
        android:id="@+id/caja_cerrar_sesion"
        android:layout_width="291dp"
        android:layout_height="44dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/botones_derecha"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/cerrar_sesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:text="@string/cerrar_sesion"
        android:textAppearance="@style/botones_ingreso"
        app:layout_constraintBottom_toBottomOf="@+id/caja_cerrar_sesion"
        app:layout_constraintStart_toStartOf="@+id/caja_cerrar_sesion"
        app:layout_constraintTop_toTopOf="@+id/caja_cerrar_sesion" />

    <View
        android:id="@+id/logo_cerrarsesion"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/cerrar_sesion"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/caja_cerrar_sesion"
        app:layout_constraintStart_toStartOf="@+id/caja_cerrar_sesion"
        app:layout_constraintTop_toTopOf="@+id/caja_cerrar_sesion"/>


    <TextView
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#22577A"
        android:gravity="center"
        android:text="@string/footer"
        android:textAppearance="@style/footer_appearance"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>